<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<groupId>space.arim</groupId>
	<artifactId>universal</artifactId>
	<version>0.6.1-SNAPSHOT</version>
	<!-- Remember to update versions: 
		1. Update property core.version
		2. Update versions in all child modules
	-->
	<packaging>pom</packaging>
	
	<name>Universal</name>
	<description>Parent module for UniversalEvents, UniversalRegistry, UniversalUtil, UniversalGPL, and UniversalPlugin</description>
	<url>https://github.com/A248/UniversalRegistry</url>
	<inceptionYear>2019</inceptionYear>
	
	<properties>
		<core.version>0.6.1</core.version>
    	<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    	<maven.compiler.source>1.8</maven.compiler.source>
    	<maven.compiler.target>1.8</maven.compiler.target>
    </properties>
    
    <licenses>
		<license>
			<name>GNU General Public License, Version 3</name>
			<url>https://www.gnu.org/licenses/</url>
			<distribution>repo</distribution>
			<comments>Strong copyleft license, commonly known as the GNU GPL v3</comments>
		</license>
	</licenses>
	
	<developers>
		<developer>
			<id>anandbeh</id>
			<name>Anand Beh</name>
			<url>https://www.arim.space</url>
			<roles>
				<role>creator</role>
				<role>developer</role>
			</roles>
			<timezone>America/New_York</timezone>
		</developer>
	</developers>
		
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.8.0</version>
					<configuration>
						<source>1.8</source>
						<target>1.8</target>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	
	<modules>
		<module>UniversalGPL</module>
		<module>UniversalEvents</module>
		<module>UniversalRegistry</module>
		<module>UniversalUtil</module>
		<module>UniversalPlugin</module>
	</modules>
	
	<distributionManagement>
		<repository>
			<id>arim-repo</id>
			<url>https://www.arim.space/repo/repository/maven-releases/</url>
		</repository>
		<snapshotRepository>
			<id>arim-repo</id>
			<url>https://www.arim.space/repo/repository/maven-snapshots/</url>
		</snapshotRepository>
	</distributionManagement>
	
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>space.arim</groupId>
				<artifactId>universal-events</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>space.arim</groupId>
				<artifactId>universal-registry</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>space.arim</groupId>
				<artifactId>universal-util</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>space.arim</groupId>
				<artifactId>universal-gpl</artifactId>
				<version>${project.version}</version>
				<classifier>resources</classifier>
				<type>zip</type>
				<scope>provided</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>
	
</project>